{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/isaaczhou2/week10homework/main/data/most_recent_records.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "EMRO",
          "EURO",
          "AFRO",
          "AMRO",
          "SEARO",
          "WPRO"
        ],
        "labels": [
          "Show All",
          "Eastern Mediterranean Region",
          "European Region",
          "African Region",
          "Region of the Americas",
          "South-East Asian Region",
          "Western Pacific Region"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Cumulative_cases > 0"},
    {"filter": "datum.Cumulative_deaths > 0"},
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Region_selection == null || datum.WHO_region == Region_selection"
    },
    {
      "calculate": "datum.Confirmed/datum.Population * 10000",
      "as": "Cases per 10,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "Cumulative_cases",
      "type": "quantitative",
      "title": "Cumulative Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 10000000]}
    },
    "y": {
      "field": "Cumulative_deaths",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 1000000]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "WHO_region",
          "type": "nominal",
          "scale": {
            "domain": [
              "EMRO",
              "EURO",
              "AFRO",
              "AMRO",
              "SEARO",
              "WPRO"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Cumulative_cases", "type": "quantitative", "format": ","},
          {"field": "Cumulative_deaths", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Cumulative_cases", "type": "quantitative", "format": ","},

          {"field": "Cumulative_deaths", "type": "quantitative", "format": ","}

        ]
      }
    }
  ]
}